[port]
shorttip: -p
longtip: --port
type: str
help: set server port to listen on/connect to to n
required: 0
default: 5201

[format]
shorttip: -f
longtip: --format
type: str
help: [kmKM] format to report: Kbits, Mbits, KBytes, MBytes
required: 1

[interval]
shorttip: -i
longtip: --interval
type: str
help: pause n seconds between periodic bandwidth reports; use 0 to disable
required: 0
default: 1

[file]
shorttip: -f
longtip: --file
type: str
help: client-side: read from file and write to network; server-side: read from network and write to file
required: 1

[bind]
shorttip: -B
longtip: --bind
type: str
help: bind to a specific interface
required: 1

[udp]
shorttip: -u
longtip: --udp
type: str
help: use UDP rather than TCP. 1 to activate
required: 0
default: 1

[bandwidth]
shorttip: -b
longtip: --bandwidth
type: str
help: n[KM] set target bandwidth to n bits/sec
required: 1

[time]
shorttip: -t
longtip: --time
type: str
help: time in seconds to transmit for
required: 0
default: 10

[bytes]
shorttip: -n
longtip: --bytes
type: str
help: number of bytes to transmit (instead of -t)
required: 1

[blockcount]
shorttip: -k
longtip: --blockcount
type: str
help: number of blocks (packets) to transmit (instead of -t or -n)
required: 1

[length]
shorttip: -l
longtip: --length
type: str
help: length of buffer to read or write
required: 0
default: 128K

[parallel]
shorttip: -P
longtip: --parallel
type: str
help: number of parallel client streams to run
required: 1

[reverse]
shorttip: -R
longtip: --reverse
type: str
help: run in reverse mode (server sends, client receives). 1 to activate
required: 0
default: 1

[window]
shorttip: -w
longtip: --window
type: str
help: n[KM] window size / socket buffer size (this gets sent to the server and used on that side too)
required: 1